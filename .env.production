# HPManager Production Environment Configuration
# Copy to .env and update values before deployment
# The deploy/setup.sh script does this automatically

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=heatpump-monitoring
INFLUXDB_BUCKET=heatpump-data
INFLUXDB_TOKEN=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# Webapp Configuration
CONFIG_DIR=/app/config
WEBAPP_PORT=8080
