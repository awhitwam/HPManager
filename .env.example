# HPManager Environment Configuration
# Copy to .env and update values as needed

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=heatpump-monitoring
INFLUXDB_BUCKET=heatpump-data
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=adminpassword

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Webapp Configuration
CONFIG_DIR=/app/config
WEBAPP_PORT=8080

# Docker socket GID (run: getent group docker | cut -d: -f3)
# Needed for webapp to restart the collector container
DOCKER_GID=999
